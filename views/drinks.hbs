<style>
  .banner {
    width: 100%;
    display: flex;
  }

  .banner .text-content {
    width: 50%;
    padding: 3rem;
    border-right: 2rem solid brown;
  }

  .banner .text-content .banner-title {
    font-size: 3rem;
    font-weight: 900;
    color: brown;
    margin: 1rem 0;
  }

  .banner .text-content .banner-title-en {
    letter-spacing: 3px;
    color: gray;
  }

  .banner img {
    width: 100%;
    height: 250px;
    object-fit: cover;
  }

  .drinks {
    width: 80%;
    margin: 2rem auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
  }

  .drink {
    width: 30%;
    margin: 1rem 0;
  }

  .drink:hover {
    box-shadow: 3px 1px 3px 3px rgba(0, 0, 0, 0.2);
  }

  .drink img {
    width: 100%;
  }

  .drink .text-content {
    padding: 0 1rem;
    display: flex;
    justify-content: end;
    background-color: #E9E5E2;
    align-items: center;
    height: 3rem;
    position: relative;
  }

  .drink .text-content p {
    margin: 0;
  }

  .drink .text-content .drink-name {
    background-color: brown;
    color: white;
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: 1.5px;
    height: 2.5rem;
    padding: 0 1rem;
    position: absolute;
    transform: translate(0%, -50%);
    top: 5%;
    left: -8%;
    box-shadow: 1px 3px 3px rgba(0, 0, 0, 0.2);
  }

  .drink .text-content .isTop {
    padding: 0.25rem 0.5rem;
    border: 1px solid brown;
    border-radius: 5px;
    color: brown;
  }
</style>

{{> nav-bar}}
<main>

  <div class="banner">
    <div class="text-content">
      <p class="banner-title">飲品清單</p>
      <p class="banner-title-en">
        <i class="fa-solid fa-shop"></i>
        drinks List
      </p>
    </div>
    <img src="/images/drinks-banner.jpg" alt="">
  </div>

  <div class="drinks">
    {{#each drinks}}
    <div class="drink">
      <img src="{{this.image}}" alt="" class="drink-img">
      <div class="text-content">
        <p class="drink-name">{{this.name}}</p>
        {{#if this.isPopular}}
        <p class="isTop"><i class="fa-solid fa-fire"></i> 熱門</p>
        {{/if}}
      </div>
    </div>
    {{/each}}
  </div>
</main>
{{> footer}}